@model IEnumerable<LoadsheddingSystem.Models.Loadshedding>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @if (User.IsInRole("Admin"))
    {
        @Html.ActionLink("Create New", "Create")
    }

</p>



<table class="table table-hover table-striped" id="my_list">
    <tr style="background-color:dimgray; color:white">
        <th>
            @Html.DisplayNameFor(model => model.BlockNumber)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Date)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.StartTime)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.EndTime)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Stage)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        var colour = "Moccasin";

        if (item.Stage == "Stage1")
        {
            colour = "PaleTurquoise";
        }
        else if (item.Stage == "Stage2")
        {
            colour = "LightYellow";
        }
        else if (item.Stage == "Stage4")
        {
            colour = "Khaki";
        }




        <tr style="background-color:@colour; color:black">
            <td>
                @Html.DisplayFor(modelItem => item.BlockNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Date)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.StartTime)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EndTime)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Stage)
            </td>
            @*<td>

                    @Html.ActionLink("Edit", "Edit", new { id = item.LoadsheddingId }) |
                    @Html.ActionLink("Details", "Details", new { id = item.LoadsheddingId }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.LoadsheddingId })

                </td>*@
            <td>
                @Html.ActionLink("Peint", "PrintById", new { id = item.LoadsheddingId }) |
            </td>
            @*@Html.ActionLink("Print Salary Slip", "PrintSalarySlip", new { id = item.EmpNo })*@
        </tr>
    }

</table>
